<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/sunandmoongofoaawalk"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
            android:layout_width="131dp"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:textColor="@android:color/white"
            android:id="@+id/longitudeMessage" tools:ignore="MissingConstraints"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            android:textColorLink="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
    />

    <EditText
            android:layout_width="131dp"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:textColor="@android:color/white"
            android:id="@+id/latitudeMessage" tools:ignore="MissingConstraints"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/longitudeMessage"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:textColorLink="@android:color/background_light"
            android:layout_marginRight="32dp"/>

    <Button
            android:text="Apply"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSubmit" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="122dp"
            android:layout_marginRight="122dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="122dp" android:layout_marginStart="122dp" android:onClick="none"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="64dp"
            app:layout_constraintHorizontal_bias="0.491"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:id="@+id/longitude"
            android:textSize="30dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="32dp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            app:layout_constraintBottom_toTopOf="@+id/latitude"
            app:layout_constraintVertical_chainStyle="spread_inside"
    />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:id="@+id/latitude"
            android:textSize="30dp"
            android:textColor="@android:color/darker_gray"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/longitude" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
    />
    <TextView
            android:layout_width="175dp"
            android:layout_height="54dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:id="@+id/simpleWatch" android:layout_marginEnd="142dp" android:layout_marginRight="142dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="141dp" android:layout_marginStart="141dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonSubmit"
    />
</androidx.constraintlayout.widget.ConstraintLayout>